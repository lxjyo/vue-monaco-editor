{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "components/**/*.vue",
    "components/**/*.ts",
    "examples/**/*.vue",
    "examples/**/*.ts",
    "shims-vue.d.ts"
  ],
  "exclude": ["components/**/*.test.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "composite": true,
    "baseUrl": ".",
    "ignoreDeprecations": "5.0",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
